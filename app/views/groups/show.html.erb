<%= link_to("Write a Post", new_group_post_path(@group), class: "btn btn-default pull-right")%>
  <table class="table table-bordered">
    <thead>
     <tr>
        <th>文章标题</th>
        <th>文章内容</th>
        <th>发表者</th>
        <th>发表时间</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= link_to(post.title, group_post_path(post)) %></td>
          <td><%= post.content %></td>
          <td><%= post.user.email %></td>
          <td><%= post.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="text-center">
    <%= will_paginate @posts %>
  </div>
